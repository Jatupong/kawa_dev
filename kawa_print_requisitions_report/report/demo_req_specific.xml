<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="demo_req_specific_id">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">

                <style>
                    @font-face
                    {
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_requisitions_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    .font_fam{
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_requisitions_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    table.table-bordered{
                    border:1px solid black;
                    width: 100%;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    height:35px;
                    }
                    table.table-bordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-nobordered{
                    margin:0px;
                    margin-top:0px;
                    margin-bottom:0px;
                    width: 100%;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                    border: 1px solid transparent
                    padding:0px;
                    }

                    table.table-bordered-b {
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    vertical-align: middle;
                    text-align:center;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tbody &gt; tr &gt; td{
                    border:0px solid White;
                    border-left: 1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tfoot &gt; tr &gt; td{
                    border: 1px solid transparent
                    padding:3px;
                    }

                    table.table-nobordered-b{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tfoot &gt; tr &gt; td{
                    border: 1px solid transparent
                    padding:0px;
                    }
                    .word_wrap{
                    word-wrap: break-word;
                    <!--background-color:#cccccc;-->
                    }
                    .td_top{
                    border-top:#000 solid 1px;
                    }
                    .td_left{
                    border-left:#000 solid 1px;
                    }
                    .td_right{
                    border-right:#000 solid 1px;
                    }
                    .td_bott{
                    border-bottom:#000 solid 1px;
                    }
                    .font_size_32{
                    font-size: 32px;
                    line-height: 30px;
                    }
                    .font_size_28{
                    font-size: 28px;
                    line-height: 26px;
                    }
                    .font_size_22{
                    font-size: 22px;
                    line-height: 20px;
                    }
                    .font_size_20{
                    font-size: 20px;
                    line-height: 18px;
                    }
                    .font_size_18{
                    font-size: 18px;
                    line-height: 16px;
                    }
                    .font_size_16{
                    font-size: 16px;
                    line-height: 14px;
                    }
                    .font_size_14{
                    font-size: 14px;
                    line-height: 12px;
                    }
                </style>
                <t t-set="company" t-value="o.company_id"/>
                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <div class="o_boxed_header">

                        <div class="row mb8">
                            <div class="col-6">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" style="width: 140px;max-height:140px;"/>
                            </div>
                            <div class="col-6 text-end mb4">
                                <div class="mt0 h4" t-field="company.report_header"/>
                                <div name="company_address" class="float-end mb4">
                                    <span t-if="company.company_details" t-field="company.company_details"/>

                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <t/>
                <br/><br/><br/><br/>
                <center>
                    <div class="font_fam font_size_20">
                        <B>แบบฟอร์มใบเบิกตัวอย่าง</B>
                    </div>
                </center>
                <br/>
                <div class="page">

                    <t t-set="requisition_type_ids" t-value="o.env['material.purchase.requisition.type'].sudo().search([])"/>
                    <table class="table table-nobordered font_fam font_size_16">
                        <tr>
                            <td width="15%">วันที่</td>
                            <td width="30%"/>
                            <td width="10%"/>
                            <td width="20%">วันที่ต้องการตัวอย่าง</td>
                            <td width="30%"><span t-field="o.scheduled_date"/></td>
                        </tr>
                        <tr>
                            <td width="25%">วัตถุประสงค์การใช้งาน</td>
                            <td>
                                <table class="table table-nobordered">
                                    <t t-foreach="requisition_type_ids" t-as="req_type">
                                        <tr>
                                            <t t-if="req_type.id == o.type_request_id.id">
                                                <td>(<span style="color:white;">____</span>/<span style="color:white;">____</span>)</td>
                                            </t>
                                            <t t-else="">
                                                <td>(<span style="color:white;">____/____</span>)</td>
                                            </t>
                                            <td><span t-field="req_type.name"/></td>
                                        </tr>
                                    </t>
                                </table>
                            </td>
                            <td/>
                            <td/>
                            <td/>
                            <td/>
                        </tr>
                    </table>
                    <br/>

                    <t t-set="i_num" t-value="0"/>
                    <table class="table-bordered-b font_fam font_size_16">
                        <thead>
                            <tr>
                                <th width="20%" rowspan="2">คลัง</th>
                                <th width="35%" colspan="3">ผู้เบิกสินค้าตัวอย่าง</th>
                                <th width="30%" colspan="4">จำนวน</th>
                                <th width="15%" rowspan="2">lot.no</th>
                            </tr>
                            <tr>
                                <th width="7%">ลำดับ</th>
                                <th width="20%">รายการ</th>
                                <th width="10%">ลูกค้า</th>
                                <th width="9%">น้ำหนัก(kgs.)</th>
                                <th width="13%" colspan="2">หน่วย</th>
                                <th width="8%">รวม</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="o.move_line_ids" t-as="line">
                                <tr>
                                    <td>
                                        <span t-field="line.location_dest_id"/>
                                    </td>
                                    <td align="center">
                                        <t t-set="i_num" t-value="i_num + 1"/>
                                        <span t-esc="i_num"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.move_id.partner_id"/>
                                    </td>
                                    <td align="right">
                                        <span t-field="line.product_id.weight"/>
                                    </td>
                                    <td align="right">
                                        <span t-field="line.qty_done"/>
                                    </td>
                                    <td align="center">
                                        <span t-field="line.product_uom_id"/>
                                    </td>
                                    <td align="right">
                                        <span t-esc="line.product_id.weight * line.qty_done"/>
                                    </td>
                                    <td align="center">
                                        <t t-if="line.lot_id">
                                            <span t-field="line.lot_id"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="line.lot_name"/>
                                        </t>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="footer">
                        <table class="table table-nobordered font_fam font_size_16" width="100%" style="border: 1px solid transparent">

                            <tr>
                                <td width="50%">
                                    <div style="width:100%; height:100px; position:relative;">
                                    </div>
                                    ผู้อนุมัติ ________________________________________________
                                </td>
                                <td width="50%">
                                    <div style="width:100%; height:100px; position:relative;">
                                    </div>
                                    ผู้จัดสินค้า ______________________________________________
                                </td>
                                <td width="30%">
                                </td>
                            </tr>
                            <tr>
                                <td width="50%">
                                    <div style="width:100%; height:100px; position:relative;">
                                    </div>
                                    ผู้ตรวจสอบ ________________________________________
                                </td>
                                <td width="50%">
                                    <div style="width:100%; height:100px; position:relative;">
                                    </div>
                                    ผู้อนุมัติกรณีตัดจากคลัง ________________________________
                                </td>
                            </tr>

                        </table>
                    </div>

                </div>

            </t>
        </t>

    </template>

</odoo>
