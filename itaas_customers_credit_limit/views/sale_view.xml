<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_sale_order_credit_limit" model="ir.ui.view">
        <field name="name">sale.order.credit.limit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <xpath expr="//header/button[1]" position="before">
                <button name="action_unlock_limit" type="object" data-hotkey="shift+u"
                        string="Unlock Limit" class="btn-danger" groups="itaas_credit_limit.group_credit_limit_unlock"
                        attrs="{'invisible': ['|', ('credit_state', 'not in', ['over']), ('state', 'not in', ['draft', 'sent','sale'])]}"/>
            </xpath>

            <group name="order_details" position="inside">
                <field name="credit_state"/>
                <field name="is_allow_credit" invisible="1"/>
            </group>

        </field>
    </record>

</odoo>