<odoo>
    <data>

        <record id="view_social_security_form" model="ir.ui.view">
            <field name="name">social.security.form</field>
            <field name="model">social.security</field>
            <field name="arch" type="xml">
                <form string="Social Security Office">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="sso_salary_rule_code"/>
                                <field name="sso_company_salary_rule_code"/>
                                <field name="company_id" ref="base.main_company"/>
                            </group>
                        </group>
                        <notebook colspan="4">
                            <page string="Social Security">
                                <field name="social_line_ids" colspan="4" nolabel="1">
                                    <tree editable="bottom">
                                        <field name="social_id" invisible="1"/>
                                        <field name="date_from" required="1"/>
                                        <field name="date_to" required="1"/>
                                        <field name="default_sso_rate"/>
                                        <field name="default_sso_company_rate"/>
                                        <field name="default_maximum_sso"/>
                                        <field name="minimum_rate"/>
                                        <field name="maximum_rate"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="social_id" invisible="1"/>
                                            <field name="date_from"/>
                                            <field name="date_to"/>
                                            <field name="default_sso_rate"/>
                                            <field name="default_sso_company_rate"/>
                                            <field name="default_maximum_sso"/>
                                            <field name="minimum_rate"/>
                                            <field name="maximum_rate"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_social_security_line_tree" model="ir.ui.view">
            <field name="name">social.security.line.tree</field>
            <field name="model">social.security.line</field>
            <field name="arch" type="xml">
                <tree string="Social Security Line">
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="default_sso_rate"/>
                    <field name="default_sso_company_rate"/>
                    <field name="default_maximum_sso"/>
                    <field name="minimum_rate"/>
                    <field name="maximum_rate"/>
                </tree>
            </field>
        </record>

        <record id="action_social_security" model="ir.actions.act_window">
            <field name="name">Social Security Office</field>
            <field name="res_model">social.security</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_social_security"
                  name="Social Security Office"
                  parent="hr_work_entry_contract_enterprise.menu_hr_payroll_configuration"
                  action="action_social_security"
                  sequence="200"/>

    </data>

</odoo>