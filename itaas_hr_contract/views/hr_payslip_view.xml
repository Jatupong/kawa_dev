<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!--hr.payslip : inherit form view-->
        <record id="hr_payslip_view_form_personal_contract" model="ir.ui.view">
            <field name="name">hr.payslip.form.personal.contract</field>
            <field name="model">hr.payslip</field>
            <field name="inherit_id" ref="hr_payroll.view_hr_payslip_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook" position="inside">
                    <page string="Personal Tax" groups="base.group_no_one">
                        <group>
                            <field name="tax_amount_total"/>
                            <field name="tax_special_amount_total"/>
                            <field name="tax_deduction"/>
                            <field name="tax_deduct"/>
                            <field name="calculate_tax"/>
                        </group>
                    </page>
                    <page string="Social Security Office" groups="base.group_no_one">
                        <group>
                            <field name="sso_amount_total"/>
                            <field name="sso_deduct"/>
                            <field name="sso_company_deduct"/>
                            <field name="pvd_amount"/>
                        </group>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
