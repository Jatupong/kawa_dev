<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="kawa_internal_tranfer_id">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">

                <style>
                    @font-face
                    {
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_inventory_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    .font_fam{
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_inventory_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    table.table-bordered{
                    border:1px solid black;
                    width: 100%;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    height:35px;
                    }
                    table.table-bordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-nobordered{
                    margin:0px;
                    margin-top:0px;
                    margin-bottom:0px;
                    width: 100%;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }

                    table.table-bordered-b {
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    vertical-align: middle;
                    text-align:center;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tbody &gt; tr &gt; td{
                    border:0px solid White;
                    border-left: 1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }

                    table.table-nobordered-b{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    .word_wrap{
                    word-wrap: break-word;
                    <!--background-color:#cccccc;-->
                    }
                    .td_top{
                    border-top:#000 solid 1px;
                    }
                    .td_left{
                    border-left:#000 solid 1px;
                    }
                    .td_right{
                    border-right:#000 solid 1px;
                    }
                    .td_bott{
                    border-bottom:#000 solid 1px;
                    }
                    .font_size_32{
                    font-size: 32px;
                    line-height: 30px;
                    }
                    .font_size_28{
                    font-size: 28px;
                    line-height: 26px;
                    }
                    .font_size_22{
                    font-size: 22px;
                    line-height: 20px;
                    }
                    .font_size_20{
                    font-size: 20px;
                    line-height: 18px;
                    }
                    .font_size_18{
                    font-size: 18px;
                    line-height: 16px;
                    }
                    .font_size_16{
                    font-size: 16px;
                    line-height: 14px;
                    }
                    .font_size_14{
                    font-size: 14px;
                    line-height: 12px;
                    }
                </style>

                <div class="header">
                    <center>
                        <div style="height:150px;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height:150px; max-width:150px;" alt="Logo"/>
                        </div>
                        <div class="font_fam font_size_20">
                            <span>ใบย้ายคลังสินค้า</span>
                        </div>
                    </center>
                </div>

                <div class="page">

                    <t t-if="o.move_line_nosuggest_ids">
                        <t t-set="move_line" t-value="o.move_line_nosuggest_ids"/>
                    </t>
                    <t t-else="">
                        <t t-set="move_line" t-value="o.move_line_ids"/>
                    </t>
                    <t t-set="i_num" t-value="0"/>
                    <table class="table table-bordered-b font_fam font_size_16">
                        <thead>
                            <tr>
                                <th width="5%">ลำดับที่</th>
                                <th width="20%">ชื่อสินค้า</th>
                                <th width="10%">Lot</th>
                                <th width="10%">น้ำหนัก</th>
                                <th width="10%">มูลค่า</th>
                                <th width="15%">คลังต้นทาง</th>
                                <th width="15%">คลังปลายทาง</th>
                                <th width="15%">สาเหตุ/ผู้ปฎิบัติงาน</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="move_line" t-as="line">
                                <tr>
                                    <td align="center">
                                        <t t-set="i_num" t-value="i_num + 1"/>
                                        <span t-esc="i_num"/>
                                    </td>
                                    <td>
                                        <span t-field="line.product_id"/>
                                    </td>
                                    <td>
                                        <t t-if="line.lot_id">
                                            <span t-field="line.lot_id"/>
                                        </t>
                                        <t t-else="">
                                            <span t-field="line.lot_name"/>
                                        </t>
                                    </td>
                                    <td align="right">
                                        <span t-field="line.qty_done"/>
                                    </td>
                                    <td align="right">

                                    </td>
                                    <td>
                                        <span t-field="line.location_id"/>
                                    </td>
                                    <td>
                                        <span t-field="line.location_dest_id"/>
                                    </td>
                                    <td>

                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <t t-set="attachment_ids" t-value="o.env['ir.attachment'].sudo().search([('res_model','=','stock.picking'),('res_id','=',o.id),('type','=','binary'),('mimetype','=','image/png')])"/>

                    <t t-if="attachment_ids">
                        <table class="table table-nobordered font_fam font_size_18">
                            <tr align="center">
                                <td>
                                    <span>รูปสินค้าชำรุด</span>
                                </td>
                            </tr>
                            <t t-foreach="attachment_ids" t-as="image">

                                <tr>
                                    <td align="center">
                                        <img t-att-src="image_data_uri(image.datas)" style="max-width:80%"/>
                                    </td>
                                </tr>
                            </t>
                        </table>
                    </t>

                </div>

            </t>
        </t>
    </template>

</odoo>
