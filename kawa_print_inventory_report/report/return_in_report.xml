                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    vertical-align: middle;
                    text-align:center;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tbody &gt; tr &gt; td{
                    border:0px solid White;
                    border-left: 1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }

                    table.table-nobordered-b{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }

                    table.table-nobordered-f{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-f &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    .word_wrap{
                    word-wrap: break-word;
                    <!--background-color:#cccccc;-->
                    }
                    .td_top{
                    border-top:#000 solid 1px;
                    }
                    .td_left{
                    border-left:#000 solid 1px;
                    }
                    .td_right{
                    border-right:#000 solid 1px;
                    }
                    .td_bott{
                    border-bottom:#000 solid 1px;
                    }
                    .font_size_32{
                    font-size: 32px;
                    line-height: 30px;
                    }
                    .font_size_28{
                    font-size: 28px;
                    line-height: 26px;
                    }
                    .font_size_22{
                    font-size: 22px;
                    line-height: 20px;
                    }
                    .font_size_20{
                    font-size: 20px;
                    line-height: 18px;
                    }
                    .font_size_18{
                    font-size: 18px;
                    line-height: 16px;
                    }
                    .font_size_16{
                    font-size: 16px;
                    line-height: 14px;
                    }
                    .font_size_14{
                    font-size: 14px;
                    line-height: 12px;
                    }
                </style>

                <t t-set="company" t-value="o.company_id"/>
                <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
                    <div class="o_boxed_header">

                        <div class="row mb8">
                            <div class="col-6">
                                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" alt="Logo" style="width: 140px;max-height:140px;"/>
                            </div>
                            <div class="col-6 text-end mb4">
                                <div class="mt0 h4" t-field="company.report_header"/>
                                <div name="company_address" class="float-end mb4">
                                    <span t-if="company.company_details" t-field="company.company_details"/>

                                </div>
                            </div>
                        </div>

                        <center>
                            <div class="font_fam" style="font-size:18px;">
                                <B>ใบรับสินค้าคืนเข้าคลัง</B>
                            </div>

                        </center>
                        <table width="100%" class="table table-nobordered font_fam font_size_18" style="margin-top:20px;border: 1px solid transparent">
                            <tr>
                                <td width="30%">บริษัทผู้นำส่งคืนสินค้า</td>
                                <td width="70%"><span t-field="o.partner_id"/></td>
                            </tr>
                            <tr>
                                <td width="10%">วันที่</td>
                                <td width="90%"><span t-field="o.scheduled_date"/></td>
                            </tr>
                            <tr>
                                <td width="10%">สาเหตุที่ส่งคืน</td>
                                <td width="90%"><span t-field="o.note"/></td>
                            </tr>
                        </table>


                    </div>
                </div>
                <t/>
                <br/><br/><br/>

                <!--<div class="header">-->


                <!--<table class="table table-nobordered font_fam font_size_18" style="margin-top:20px;">-->
                <!--    <tr>-->
                <!--        <td width="30%">บริษัทผู้นำส่งคืนสินค้า</td>-->
