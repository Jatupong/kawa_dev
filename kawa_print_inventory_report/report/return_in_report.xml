    <record id="paperformat_A4_Five_Margin_kawa_return_in" model="report.paperformat">
        <field name="name">A4_Five_Margin_return_in</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">90</field>
        <field name="margin_bottom">15</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">80</field>
        <field name="dpi">90</field>
    </record>

    <report
            id="kawa_return_in_report"
            model="stock.picking"
            menu="True"
            report_type="qweb-pdf"
            string="ใบรับสินค้าคืนโกดัง"
            paperformat="paperformat_A4_Five_Margin_kawa_return_in"
            name="kawa_print_inventory_report.kawa_return_in_report_id"
