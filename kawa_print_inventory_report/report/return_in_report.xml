                <!--        <td width="90%"><span t-field="o.note"/></td>-->
                <!--    </tr>-->
                <!--</table>-->
                <!--</div>-->

                <div class="page">

                    <t t-if="o.move_line_nosuggest_ids">
                        <t t-set="move_line" t-value="o.move_line_nosuggest_ids"/>
                    </t>
                    <t t-else="">
                        <t t-set="move_line" t-value="o.move_line_ids"/>
                    </t>

                    <t t-set="num" t-value="0"/>

                    <table class="table-bordered-b font_fam font_size_16">
                        <thead>
                            <tr style="line-height:30px;">
                                <th width="5%">ลำดับ</th>
                                <th width="20%">invoice Number</th>
                                <th width="39%">ชื่อสินค้า/รายละเอียด</th>
                                <th width="9%">จำนวน</th>
                                <th width="12%">ราคาต่อหน่วย</th>
                                <th width="15%">จำนวนเงินรวม</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="move_line" t-as="line">
                                <tr style="border-bottom:1px solid black;">
                                    <td align="center">
                                        <t t-set="num" t-value="num+1"/>
                                        <span t-esc="num"/>
                                    </td>
                                    <td align="center">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="word_wrap">
                                            <span t-if="line.move_id.description_picking" t-field="line.move_id.description_picking"/>
                                            <span t-else="" t-field="line.product_id.name"/>
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                            <span t-field="line.qty_done"/>
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br/><br/><br/>

                    <div class="row">
                        <table class="font_fam font_size_16 table table-nobordered-f">
                            <tr>
                                <td align="center">
                                    <div>
                                        <span>ลงชื่อผู้ส่งคืนสินค้า</span><br/>
                                    </div>
                                    <div style="width:100%; height:90px; position:relative; border-bottom:1px solid black;">
                                    </div>
                                    <div>
                                        <span>บริษัทขนส่งต้นทาง</span><br/>
                                    </div>
                                </td>
                                <td align="center">
                                    <div>
                                        <span>ลงชื่อผู้รับสินค้า</span><br/>
                                    </div>
                                    <div style="width:100%; height:90px; position:relative; border-bottom:1px solid black;">
                                    </div>
                                    <div>
                                        <span>พนักงานคลังสินค้าคาวา</span><br/>
                                    </div>
                                </td>
                            </tr>
                        </table>

                    </div>

                </div>

