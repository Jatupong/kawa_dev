<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="kawa_return_in_report_id">
        <t t-foreach="docs" t-as="o">
            <t t-call="web.basic_layout">

                <style>
                    @font-face
                    {
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_inventory_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    .font_fam{
                    font-family: Sarabun-Regular;
                    src: local('United'), url("/kawa_print_inventory_report/static/font/Sarabun-Regular.ttf") format('opentype');
                    }
                    table.table-bordered{
                    border:1px solid black;
                    width: 100%;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; thead &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    height:35px;
                    }
                    table.table-bordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-nobordered{
                    margin:0px;
                    margin-top:0px;
                    margin-bottom:0px;
                    width: 100%;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:3px;
                    }
                    table.table-nobordered &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:3px;
                    }
                    table.table-nobordered &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:3px;
                    }
                    table.table-nobordered &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:3px;
                    }

                    table.table-bordered-b {
                    border:1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid black;
                    vertical-align: middle;
                    text-align:center;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tbody &gt; tr &gt; td{
                    border:0px solid White;
                    border-left: 1px solid black;
                    padding:3px;
                    }
                    table.table-bordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid black;
                    padding:3px;
                    }

                    table.table-nobordered-b{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }
                    table.table-nobordered-b &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:0px;
                    }

                    table.table-nobordered-f{
                    margin:0px;
                    width: 100%;
                    }
                    table.table-nobordered-f &gt; thead &gt; tr &gt; th{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; thead &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; tbody &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    table.table-nobordered-f &gt; tfoot &gt; tr &gt; td{
                    border:1px solid white;
                    padding:20px;
                    }
                    .word_wrap{
                    word-wrap: break-word;
                    <!--background-color:#cccccc;-->
                    }
                    .td_top{
                    border-top:#000 solid 1px;
                    }
                    .td_left{
                    border-left:#000 solid 1px;
                    }
                    .td_right{
                    border-right:#000 solid 1px;
                    }
                    .td_bott{
                    border-bottom:#000 solid 1px;
                    }
                    .font_size_32{
                    font-size: 32px;
                    line-height: 30px;
                    }
                    .font_size_28{
                    font-size: 28px;
                    line-height: 26px;
                    }
                    .font_size_22{
                    font-size: 22px;
                    line-height: 20px;
                    }
                    .font_size_20{
                    font-size: 20px;
                    line-height: 18px;
                    }
                    .font_size_18{
                    font-size: 18px;
                    line-height: 16px;
                    }
                    .font_size_16{
                    font-size: 16px;
                    line-height: 14px;
                    }
                    .font_size_14{
                    font-size: 14px;
                    line-height: 12px;
                    }
                </style>

                <div class="header">
                    <center>
                        <div style="height:100px;">
                            <img t-if="o.company_id.logo" t-att-src="image_data_uri(o.company_id.logo)" style="max-height:150px; max-width:150px;" alt="Logo"/>
                        </div>
                        <div class="font_fam font_size_22">
                            <B>ใบรับสินค้าคืนเข้าคลัง</B>
                        </div>
                    </center>

                    <table class="table table-nobordered font_fam font_size_16" style="margin-top:20px;">
                        <tr>
                            <td width="10%">บริษัทผู้นำส่งคืนสินค้า</td>
                            <td width="90%"><span t-field="o.partner_id"/></td>
                        </tr>
                        <tr>
                            <td width="10%">วันที่</td>
                            <td width="90%"><span t-field="o.scheduled_date"/></td>
                        </tr>
                        <tr>
                            <td width="10%">สาเหตุที่ส่งคืน</td>
                            <td width="90%"><span t-field="o.note"/></td>
                        </tr>
                    </table>
                </div>

                <div class="page">

                    <t t-if="o.move_line_nosuggest_ids">
                        <t t-set="move_line" t-value="o.move_line_nosuggest_ids"/>
                    </t>
                    <t t-else="">
                        <t t-set="move_line" t-value="o.move_line_ids"/>
                    </t>

                    <t t-set="num" t-value="0"/>

                    <table class="table table-bordered-b font_fam font_size_16">
                        <thead>
                            <tr>
                                <th width="5%">ลำดับ</th>
                                <th width="20%">invoice Number</th>
                                <th width="30%">ชื่อสินค้า/รายละเอียด</th>
                                <th width="12%">จำนวน</th>
                                <th width="15%">ราคาต่อหน่วย</th>
                                <th width="18%">จำนวนเงินรวม</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="move_line" t-as="line">
                                <tr>
                                    <td align="center">
                                        <t t-set="num" t-value="num+1"/>
                                        <span t-esc="i_num"/>
                                    </td>
                                    <td align="center">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                    <td>
                                        <div class="word_wrap">
                                            <span t-if="line.move_id.description_picking" t-field="line.move_id.description_picking"/>
                                            <span t-else="" t-field="line.product_id.name"/>
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                            <span t-field="line.qty_done"/>
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                    <td align="right">
                                        <div class="word_wrap">
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <div class="row">
                        <table class="font_fam font_size_16 table table-nobordered-f">
                            <tr>
                                <td align="center">
                                    <div>
                                        <span>ลงชื่อผู้ส่งคืนสินค้า</span><br/>
                                    </div>
                                    <div style="width:100%; height:90px; position:relative; border-bottom:1px solid black;">
                                    </div>
                                    <div>
                                        <span>บริษัทขนส่งต้นทาง</span><br/>
                                    </div>
                                </td>
                                <td align="center">
                                    <div>
                                        <span>ลงชื่อผู้รับสินค้า</span><br/>
                                    </div>
                                    <div style="width:100%; height:90px; position:relative; border-bottom:1px solid black;">
                                    </div>
                                    <div>
                                        <span>พนักงานคลังสินค้าคาวา</span><br/>
                                    </div>
                                </td>
                            </tr>
                        </table>

                    </div>

                </div>

                <div class="footer">

                    <div class="col-12 font_fam font_size_8" style="text-align:center;">
                        Kawa International Trading CO., LTD. 723 Supakarn Building Klongtonsai Klongsan Bangkok 10600
                    </div>

                </div>

            </t>
        </t>
    </template>

    <record id="paperformat_A4_Five_Margin_kawa_return_in" model="report.paperformat">
        <field name="name">A4_Five_Margin_return_in</field>
        <field name="default" eval="False"/>
        <field name="format">A4</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">70</field>
        <field name="margin_bottom">82</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">65</field>
        <field name="dpi">90</field>
    </record>

    <report
            id="kawa_return_in_report"
            model="stock.picking"
            menu="True"
            report_type="qweb-pdf"
            string="ใบรับสินค้าคืนโกดัง"
            paperformat="paperformat_A4_Five_Margin_kawa_return_in"
            name="kawa_print_inventory_report.kawa_return_in_report_id"
            file="kawa_print_inventory_report.kawa_return_in_report_id"
    />

</odoo>