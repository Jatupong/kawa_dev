<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_asset_write_off_excel_export_form" model="ir.ui.view">
        <field name="name">asset.write.off.excel.export.form</field>
        <field name="model">asset.write.off.excel.export</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export File">
                <group col="4" colspan="4">
                    <field name="report_file" readonly="1" filename="name" nolabel="1"/>
                    <field name="name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_back" string="_Back" type="object" class="oe_highlight"/>
                    or
                    <button string="Close" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="view_asset_report_write_off_report" model="ir.ui.view">
        <field name="name">Asset Report</field>
        <field name="model">asset.report.write.off</field>
        <field name="arch" type="xml">
            <form string="Detail Report PO">
                <group>
                    <group>
                        <field name="date_from" required="1" />
                        <field name="report_type"/>
                    </group>
                    <group>
                        <field name="date_to" required="1" />
                        <field name="is_unpost"/>
                    </group>
                </group>
                <group>
                    <group>
                        <field name="cost_center_from"/>
                    </group>
                    <group>
                        <field name="cost_center_to"/>

                    </group>

                </group>
                <group>
                    <field name="category_id" widget="many2many_tags"/>
                </group>
                <footer>
                    <button name="print_report_excel" string="PRINT" type="object" default_focus="1" class="oe_highlight"/>
                    <!--                    or-->
                    <!--                    <button name="print_report_pdf" string="View" type="object" class="btn-primary"/>-->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asset_report_write_off_report" model="ir.actions.act_window">
        <field name="name">Asset Report Write Off</field>
        <field name="res_model">asset.report.write.off</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_asset_report_write_off_report"/>
        <field name="target">new</field>
    </record>


    <menuitem id="asset_report_write_off_report_menu"
              action="action_asset_report_write_off_report"
              parent="account.account_reports_management_menu"
              sequence="11"/>

</odoo>
