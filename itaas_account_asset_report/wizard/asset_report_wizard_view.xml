<odoo>
    <!-- tax report export form -->

    <record id="view_account_asset_excel_export_form" model="ir.ui.view">
        <field name="name">account.asset.excel.export.form</field>
        <field name="model">account.asset.excel.export</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Export File">
                <group col="4" colspan="4">
                    <field name="report_file" readonly="1" filename="name" nolabel="1"/>
                    <field name="name" invisible="1"/>
                </group>
                <footer>
                    <button name="action_back" string="_Back" type="object" class="oe_highlight"/>
                    or
                    <button string="Close" class="oe_highlight" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- tax report wizard form view -->
    <record id="view_account_asset_wizard_wizard_form" model="ir.ui.view">
        <field name="name">account.asset.wizard.form</field>
        <field name="model">account.asset.wizard</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Asset Report">
                <group col="2" colspan="2">
                    <field name="date_from" />
                    <field name="date_to"/>
                    <field name="asset_model"/>
                </group>
                <footer>
                    <button name="print_report_excel" string="Print(Excel)" type="object" default_focus="1" class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_asset_report_excel_wizard" model="ir.actions.act_window">
        <field name="name">Asset Report</field>
        <field name="res_model">account.asset.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_account_asset_wizard_wizard_form"/>
        <field name="target">new</field>
    </record>


    <menuitem id="menu_report_asset_excel"  action="action_asset_report_excel_wizard"
              parent="account.account_reports_management_menu" name="Report Asset(EXCEL)"/>

</odoo>