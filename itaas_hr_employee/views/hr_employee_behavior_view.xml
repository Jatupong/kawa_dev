<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hr_employee_behavior_view_form" model="ir.ui.view">
        <field name="name">hr.employee.behavior.view.form</field>
        <field name="model">hr.employee.behavior</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="employee_id"/>
                        <field name="date"/>
                    </group>
                    <group>
                        <field name="type_id"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_employee_behavior_view_tree" model="ir.ui.view">
        <field name="name">hr.employee.behavior.view.tree</field>
        <field name="model">hr.employee.behavior</field>
        <field name="arch" type="xml">
            <tree string="Behavior" create="0">
                <field name="employee_id"/>
                <field name="date"/>
                <field name="type_id"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="action_hr_employee_behavior" model="ir.actions.act_window">
        <field name="name">Employee Behavior</field>
        <field name="res_model">hr.employee.behavior</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="hr_behavior_type_view_tree" model="ir.ui.view">
        <field name="name">hr.behavior.type.view.tree</field>
        <field name="model">hr.behavior.type</field>
        <field name="arch" type="xml">
            <tree string="Behavior Type">
                <field name="name"/>
                <field name="description"/>
            </tree>
        </field>
    </record>

    <record id="hr_behavior_type_view_form" model="ir.ui.view">
        <field name="name">hr.behavior.type.view.form</field>
        <field name="model">hr.behavior.type</field>
        <field name="arch" type="xml">
            <form string="Behavior Type">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                    <group>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_hr_behavior_type" model="ir.actions.act_window">
        <field name="name">Behavior Type</field>
        <field name="res_model">hr.behavior.type</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_employee_behavior_main"
            parent="hr.menu_human_resources_configuration"
            name="Behavior"
            sequence="110"/>

    <menuitem
            id="menu_employee_behavior"
            parent="menu_employee_behavior_main"
            name="Employee Behavior"
            action="action_hr_employee_behavior"
            sequence="1"/>

    <menuitem
            id="menu_behavior_type"
            parent="menu_employee_behavior_main"
            name="Behavior Type"
            action="action_hr_behavior_type"
            sequence="2"/>
</odoo>