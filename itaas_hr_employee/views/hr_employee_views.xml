<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- hr.employee : inherit form view -->
        <record id="view_employee_form_itaas" model="ir.ui.view">
            <field name="name">view.hr.employee.itaas</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <xpath expr="//notebook/page[@name='personal_information']/group/group[3]" position="replace">
                    <group string="Work Permit">
                        <field name="visa_no"/>
                        <field name="permit_no"/>
                        <field name="visa_expire"/>
                        <field name="work_permit_expiration_date"/>
                        <field name="has_work_permit" widget="work_permit_upload"/>
                    </group>
                </xpath>
                <xpath expr="//notebook/page[@name='personal_information']/group/group[2]/separator[@name='emergency']" position="replace">
                </xpath>

                <xpath expr='//form/sheet/group/group[1]' position="inside">
                    <field name="emp_code"/>
                    <field name="title"/>
                    <field name="first_name"/>
                    <field name="last_name"/>
                    <field name="nick_name"/>
                    <field name="eng_firstname"/>
                    <field name="eng_lastname"/>
                    <field name="eng_nick_name"/>
                    <field name="home_address"/>
                </xpath>

                <!--Private Contact-->
                <xpath expr='//notebook/page/group/group[1]' position="inside">
                    <field name="residence"/>
                </xpath>

                <!--Citizenship-->
                <xpath expr='//notebook/page/group/group[2]/field[1]' position="before">
                    <field name="race"/>
                    <field name="religion"/>
                </xpath>
                <xpath expr='//field[@name="birthday"]' position="before">
                    <field name="age"/>
                </xpath>
                <xpath expr='//field[@name="identification_id"]' position="after">
                    <field name="ident_exp_date"/>
                    <field name="ident_issued_date"/>
                </xpath>

                <xpath expr='//notebook/page/group/group[1]' position="after">
                    <group string="Social Security">
                        <field name="sso_id"/>
                        <field name="sso_hospital"/>
                        <separator name="military" string="Military"/>
                        <field name="military_status"/>
                    </group>
                    <group string="Bank">
                        <field name="bank_name"/>
                        <field name="bank_branch"/>
                        <field name="bank_number"/>
                        <field name="bank_detail"/>
                    </group>
                </xpath>

                <xpath expr="//notebook/page[@name='personal_information']" position="after">
                    <page string="Emergency Contact" groups="hr.group_hr_user">
                        <group>
                            <group string="ผู้ติดต่อ">
                                <field name="ec_name"/>
                                <field name="ec_relationship"/>
                                <field name="ec_tel1"/>
                                <field name="ec_tel2"/>
                                <field name="ec_line_id"/>
                            </group>
                            <group string="ที่อยู่">
                                <field name="ec_woreda"/>
                                <field name="ec_kebele"/>
                                <field name="ec_houseno"/>
                                <field name="ec_address"/>
                                <field name="ec_country_id"/>
                                <field name="ec_state_id"/>
                            </group>
                        </group>
                    </page>
                    <page string="Education" groups="hr.group_hr_user">
                        <group string="Education">
                            <field name="certificate"/>
                            <field name="study_field"/>
                            <field name="study_school"/>
                        </group>
                        <group colspan="2">
                            <field name="education_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="education_level"/>
                                    <field name="name"/>
                                    <field name="major"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Experience" groups="hr.group_hr_user">
                        <group string="Experience" colspan="2">
                            <field name="experience_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date_from"/>
                                    <field name="date_to"/>
                                    <field name="position"/>
                                    <field name="responsibility"/>
                                    <field name="salary"/>
                                    <field name="reason"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="family" string="Family" groups="hr.group_hr_user">
                        <group>
                            <group string="พ่อ-แม่">
                                <!--father-->
                                <field name="fam_father" string="ชื่อพ่อ"/>
                                <field name="fam_father_date_of_birth" string="วันเกิดพ่อ"/>
                                <field name="fam_father_age" string="อายุ"/>
                                <field name="fam_father_status" string="สถานภาพ"/>
                                <field name="fam_father_job" string="อาชีพ"/>
                                <!--mother-->
                                <field name="fam_mother" string="ชื่อแม่"/>
                                <field name="fam_mother_date_of_birth" string="วันเกิดแม่"/>
                                <field name="fam_mother_age" string="อายุ"/>
                                <field name="fam_mother_status" string="สถานภาพ"/>
                                <field name="fam_mother_job" string="อาชีพ"/>
                            </group>
                            <group string="คู่สมรส">
                                <field name="fam_spouse" string="ชื่อ"/>
                                <field name="fam_spouse_working_place" string="สถานที่ทำงาน"/>
                                <field name="fam_spouse_job" string="อาชีพ"/>
                                <field name="fam_telephone" string="โทรศัพท์"/>
                            </group>
                            <group string="สมาชิกครอบครัว">
                                <field name="number_of_member" string="จำนวนพี่น้อง(รวมทั้งสมัคร)"/>
                                <field name="number_of_male_member" string="จำนวนพี่น้องชาย"/>
                                <field name="number_of_female_member" string="จำนวนพี่น้องหญิง"/>
                                <field name="ordinal_of_member" string="เป็นบุตรคนที่"/>
                                <field name="children" string="จำนวนบุตร"/>
                            </group>
                        </group>
                        <group string="Children" colspan="2">
                            <field name="fam_children_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="date_of_birth"/>
                                    <field name="age"/>
                                    <field name="occupation"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Health" groups="hr.group_hr_user">
                        <group>
                            <field name="blood_group" string="กลุ่มเลือด"/>
                            <field name="weight" string="น้ำหนัก"/>
                            <field name="high" string="ส่วนสูง"/>
                        </group>
                        <group string="ประวัติรักษาพยาบาล" colspan="2">
                            <field name="fam_health_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="detail"/>
                                    <field name="date"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Training" groups="hr.group_hr_user">
                        <group string="Training" colspan="2">
                            <field name="fam_training_ids" nolabel="1" readonly="1" colspan="2">
                                <tree string="Employee Training" editable="bottom">
                                    <field name="employee_id" invisible="1"/>
                                    <field name="date_form"/>
                                    <field name="date_to"/>
                                    <field name="name"/>
                                    <field name="note"/>
                                    <field name="certificate_id"/>
                                    <field name="exp_certificate_date"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="language" string="Language Ability" groups="hr.group_hr_user">
                        <group string="Language" colspan="2">
                            <field name="ability_language_ids" nolabel="1" colspan="2">
                                <tree editable="bottom">
                                    <field name="language"/>
                                    <field name="name"/>
                                    <field name="speaking"/>
                                    <field name="writing"/>
                                    <field name="reading"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page name="special_ability" string="Special Ability" groups="hr.group_hr_user">
                        <group>
                            <group>
                                <field name="ability_typing"/>
                                <field name="ability_typing_note" placeholder="Detail Words/Minute"/>
                                <field name="ability_computer"/>
                                <field name="ability_computer_note" placeholder="Please specify"/>
                                <field name="ability_driving"/>
                                <field name="ability_driving_license"/>
                            </group>
                            <group>
                                <field name="ability_office_machine"/>
                                <field name="ability_hobbies" placeholder="Please specify"/>
                                <field name="ability_favorites" placeholder="Please specify"/>
                                <field name="ability_knowledge" placeholder="Please specify"/>
                                <field name="ability_others" placeholder="Please specify"/>
                            </group>
                        </group>
                    </page>
                    <page string="Behavior Logs">
                        <field name="behavior_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="date"/>
                                <field name="type_id"/>
                                <field name="description"/>
                            </tree>
                        </field>
                    </page>
                </xpath>

            </field>
        </record>

    </data>
</odoo>
